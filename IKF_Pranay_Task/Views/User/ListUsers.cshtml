@model List<IKF_Pranay_Task.Models.User>

<h2 class="mt-4 text-center">Users List</h2>

<div class="container mt-5">
    <div class="table-responsive shadow-lg">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Date of Birth</th>
                    <th scope="col">Designation</th>
                    <th scope="col">Skills</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.DOB.ToShortDateString()</td>
                        <td>@user.Designation</td>
                        <td>@string.Join(", ", user.Skills)</td>
                        <td>
                            <div class="d-flex flex-wrap gap-1">
                                <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-primary btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="AddUsers" asp-controller="User" class="btn btn-success btn-sm">
                                    <i class="bi bi-plus-circle"></i> Add User
                                </a>
                                <form asp-action="Delete" asp-route-id="@user.UserId" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<style>
    thead th {
        position: sticky;
        top: 0;
        background-color: #343a40; 
        z-index: 1;
    }

</style>

