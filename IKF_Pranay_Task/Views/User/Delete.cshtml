@model IKF_Pranay_Task.Models.User

<h2>Delete User</h2>
<p>Are you sure you want to delete this user?</p>
<div>
    <p><strong>ID:</strong> @Model.UserId</p>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Date of Birth:</strong> @Model.DOB.ToShortDateString()</p>
    <p><strong>Designation:</strong> @Model.Designation</p>
    <p><strong>Skills:</strong> @Model.Skills</p>
</div>
<form asp-action="Delete">
    <input type="hidden" name="UserId" value="@Model.UserId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("ListUsers", "User")" class="btn btn-secondary">Cancel</a>
</form>
